
<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>


<p>
  <strong>Review:</strong>
  <% @restaurant.reviews.each do |review| %>
  <p><%=review.content%></p>
  <p><%=review.rating%></p>
<% end %>
</p>

<%= link_to "Add Review", new_restaurant_review_path(@restaurant), class: "btn btn-light"%>
<%= link_to 'Back', restaurants_path, class: "btn btn-light"%>
